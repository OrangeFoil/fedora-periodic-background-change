[Unit]
Description=Rotate GNOME background
 
[Service]
Type=oneshot
Environment=DISPLAY=:0
ExecStart=/bin/bash -c 'gsettings set org.gnome.desktop.screensaver picture-uri "file://$(find /usr/share/backgrounds/f28/extras/ -type f -name *.jpg -o -name *.png | shuf -n 1)"'
 
[Install]
WantedBy=basic.targe
